# Database
DATABASE_URL="postgresql://user:password@localhost:5432/depizza"

# JWT Secret (generate a secure secret for production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Node Environment
NODE_ENV="development"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Redis for caching (if implementing caching layer)
REDIS_URL="redis://localhost:6379"

# Optional: Email service (for notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"

# Optional: File upload service
UPLOAD_PROVIDER="local" # local, s3, cloudinary
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_BUCKET_NAME="your-bucket-name"
AWS_REGION="us-east-1"

# Optional: Monitoring and analytics
SENTRY_DSN="your-sentry-dsn"
ANALYTICS_ID="your-analytics-id"

# Development flags
DEBUG_MODE="true"
LOG_LEVEL="debug"